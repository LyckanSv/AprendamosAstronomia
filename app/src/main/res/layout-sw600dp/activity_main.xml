<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.callejas.cesar.aprendamosastronomia.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mainLogo"
                android:src="@drawable/astronauta1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/mainTitle"
                android:layout_below="@id/mainLogo"
                android:text=" "
                android:textColor="@color/primary_text"
                android:gravity="center"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/mainTitle"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:id="@+id/botones">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingRight="5dp">

                    <Button
                        style="@style/buttons"
                        android:onClick="sitio1"
                        android:text=" "/>

                    <Button
                        style="@style/buttons"
                        android:onClick="sitio3"
                        android:text=" "/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="5dp">

                    <Button
                        style="@style/buttons"
                        android:onClick="sitio2"
                        android:text=" "/>

                    <Button
                        style="@style/buttons"
                        android:onClick="sitio4"
                        android:text=" "/>
                </LinearLayout>
            </LinearLayout>

            <Button
                style="@style/buttons"
                android:onClick="sitio5"
                android:text=" "
                android:layout_below="@id/botones"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"/>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>